<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rlMain" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:background="#000000">

	<RelativeLayout 
		android:background="@drawable/titlebar"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:id="@+id/rlTitleBar" 
		android:layout_alignParentLeft="true">
		
		<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:id="@+id/textView1"
			android:text="SEARCH" 
			android:textColor="#ffffff" 
			android:textStyle="normal"
			android:textSize="20sp" 
			android:layout_centerInParent="true">
		</TextView>
	</RelativeLayout>

	<RelativeLayout 
		android:id="@+id/rlSearch"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_below="@+id/rlTitleBar" 
		android:background="@drawable/searchbackground">

		<EditText 
			android:id="@+id/etCity" 
			android:text="London"
			android:layout_height="wrap_content" 
			android:layout_centerInParent="true"
			android:layout_width="fill_parent">
		</EditText>
		
		<Button 
			android:id="@+id/btnSearch" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:background="@drawable/button"
			android:textColor="#ffffff" 
			android:layout_below="@+id/etCity"
			android:layout_centerHorizontal="true" 
			android:text="SEARCH"
			android:textSize="15sp">
		</Button>
	</RelativeLayout>

	<RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:background="@drawable/scrollbar"
		android:layout_alignParentBottom="true"
		>

		<HorizontalScrollView 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_gravity="center">
			
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:orientation="horizontal">

				<ImageView 
					android:layout_height="wrap_content"
					android:layout_width="wrap_content" 
					android:id="@+id/ivHome"
					android:layout_alignParentLeft="true" 
					android:padding="5dip"
					android:src="@drawable/realestate">
				</ImageView>
				
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivRestaurant"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/restaurant">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivShopping"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/shopping">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivNightLife"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/nightlife">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivHotelnTravel"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/hotelstravel">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivHealth"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/health">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivEducation"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/education">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivEvent"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/event">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivReligious"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/religious">
				</ImageView>
				
							
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivAutoMotive"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/automotive">
				</ImageView>

						

			</LinearLayout>
		</HorizontalScrollView>

	</RelativeLayout>


</RelativeLayout>
