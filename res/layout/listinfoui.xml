<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/rlMain"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:gravity="top">
  
  <RelativeLayout
  android:id="@+id/rlTitleBar"
  android:layout_height="wrap_content"
  android:layout_width="fill_parent"
  android:background="@drawable/titlebar">
  
  		<Button
  		android:id="@+id/btnBack"
  		android:layout_height="wrap_content"
  		android:layout_width="wrap_content"
  		android:background="@drawable/backbutton"
  		android:layout_marginTop="07dip"
		android:layout_marginLeft="10dip"
  		></Button>
  		
  		<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:id="@+id/tvName"
			android:text="INFO" 
			android:textColor="#ffffff" 
			android:textStyle="normal"
			android:textSize="20sp" 
			android:singleLine="true"
			android:layout_centerInParent="true">
		</TextView>
		
  </RelativeLayout>
<RelativeLayout 
		android:id="@+id/rlForScroll"
		android:layout_below="@id/rlTitleBar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		>

<ScrollView
	android:id="@+id/scrDetails"
	android:scrollbars="vertical"
	android:layout_below="@id/rlTitleBar"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	>
	
	<LinearLayout
	android:id="@+id/llDetails_inscroll"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	>
<RelativeLayout
	android:layout_below="@id/rlTitleBar"
	android:id="@+id/rlImgBar" 
	android:layout_height="wrap_content" 
	android:layout_width="fill_parent">
	
		<RelativeLayout
		android:id="@+id/rlImg"
		android:layout_height="wrap_content" 
		android:paddingTop="5dip"
		android:paddingLeft="7dip"
		android:layout_width="wrap_content">
	   
			<ImageView
			android:id="@+id/imgIndex"
			android:src="@drawable/panpacific"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">
		  	</ImageView>
   		</RelativeLayout>
	<RelativeLayout
		android:paddingTop="5dip"
	   android:id="@+id/rlRatingReview"
	   android:layout_below="@id/rlFirst"
	   android:layout_toRightOf="@id/rlImg"
	   android:layout_height="wrap_content" 
	   android:layout_width="wrap_content">
   
	    <TextView 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="Address"
	   android:textColor="#666666"
	    android:id="@+id/tvAddressDemo"
	     android:layout_marginLeft="10dip">
	    </TextView>
    
	    <TextView 
	    android:layout_below="@id/tvAddressDemo"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="Address1"
	   android:textColor="#666666"
	    android:layout_marginLeft="10dip"
	    android:id="@+id/tvAddress1">
	  </TextView>
	  
	   <TextView 
	    android:layout_below="@id/tvAddress1"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="Zip"
	    android:layout_marginLeft="10dip"
	   android:textColor="#666666"
	    android:id="@+id/tvZip">
	  </TextView>
	    
	    <TextView 
	    android:layout_below="@id/tvAddress1"
	    android:layout_toRightOf="@id/tvZip"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="State"
	    android:layout_marginLeft="10dip"
	   android:textColor="#666666"
	    android:id="@+id/tvCity">
	  </TextView>
	  
	  <ImageView 
		android:id="@+id/imgPhoneDemo"
		android:layout_width="20dip"
		android:layout_height="20dip"
		android:layout_marginLeft="10dip"
		android:background="@drawable/mobile"
		android:layout_below="@id/tvCity"
		></ImageView>
	
	   <TextView 
	    android:layout_below="@id/tvCity"
	    android:layout_toRightOf="@id/imgPhoneDemo"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="Phone"
	    android:layout_marginLeft="10dip"
	    android:textColor="#666666"
	    android:id="@+id/tvPhone">
	  </TextView>

		<ImageView
	   android:id="@+id/imgRatingMain"
	   android:layout_below="@id/tvPhone"
	   android:layout_height="wrap_content"
	   android:layout_width="wrap_content" 
	   android:layout_marginLeft="10dip"
	   android:layout_marginTop="6dip"
	   android:background="@drawable/rating">
	   </ImageView>
	   
	   <TextView 
	   android:layout_below="@id/tvPhone"
	    android:layout_toRightOf="@id/imgRatingMain"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="Review"
	    android:layout_marginLeft="10dip"
	   android:textColor="#666666"
	    android:id="@+id/tvReviewCount">
	    </TextView>
	</RelativeLayout>
  
	</RelativeLayout>
	<RelativeLayout
	android:id="@+id/rlAddressBar"
	android:layout_below="@id/rlImgBar"
	android:layout_height="wrap_content"
	android:paddingRight="7dip" 
	android:layout_width="fill_parent"
	android:paddingBottom="10dip"
	android:paddingTop="10dip"
	android:paddingLeft="7dip">

	<RelativeLayout
		android:id="@+id/rlCategory"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		
				<TextView 
			 	android:id="@+id/tvCategoryType"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:text="Category"
			    android:layout_alignParentLeft="true"  
			  android:textColor="#666666">
			  </TextView>
			  <TextView 
			  	android:id="@+id/tvCategory"
			    android:layout_below="@id/tvCategoryType"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:text="British"
			    android:layout_alignParentLeft="true"  
			    android:textColor="#666666">
			  </TextView>
			  
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/rlSharenWeb"
		android:layout_toRightOf="@id/rlCategory"
		android:paddingLeft="20dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		
			 
			  <Button
			  android:id="@+id/btnFacebook"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:background="@drawable/fbicon"
			  >
			  </Button>
			  
			  <Button
			  android:id="@+id/btnTwitter"
			  android:layout_toRightOf="@id/btnFacebook"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_marginLeft="10dip"
			  android:background="@drawable/twittericon"
			  >
			  </Button>
			  
			  <Button
				android:id="@+id/btnMobileWeb"
				android:layout_toRightOf="@id/btnTwitter"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"
				android:background="@drawable/mobileweb">
			  </Button>
			  
		</RelativeLayout>  
	  
	</RelativeLayout>
	
	
	<RelativeLayout
	android:id="@+id/rlUserReview"
	android:layout_below="@id/rlAddressBar"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content">
	
	<Button
	android:id="@+id/btnReview"
	android:background="@drawable/reviewbackgroundone"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:text="REVIEW"
	android:textColor="#000000" 
	android:textStyle="bold"
	android:textSize="12dip">
	</Button>
	
	
	<RelativeLayout
	android:id="@+id/rlReview1"
	android:paddingTop="5dip"
	android:paddingLeft="7dip"
	android:paddingRight="7dip"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_below="@id/btnReview">
	
		<RelativeLayout
		android:id="@+id/rlReview1Img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		
	   <ImageView
	   android:id="@+id/imgReview1"
	   android:layout_height="70dip"
	   android:layout_width="70dip" 
	   android:layout_alignParentLeft="true"
	   android:background="@drawable/panpacific">
	   </ImageView>
	   
	   <TextView
		android:id="@+id/tvUserName1"
		android:layout_below="@id/imgReview1"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="user_name"
		android:textColor="#666666"
		android:textSize="13dip"
		>
		</TextView>
	   
	    <ImageView
	   android:id="@+id/imgRating1"
	   android:layout_below="@id/tvUserName1"
	   android:layout_height="wrap_content"
	   android:layout_width="wrap_content" 
	   android:layout_alignParentLeft="true"
	   android:background="@drawable/rating">
	   </ImageView>
	   
	   <TextView
		android:id="@+id/tvRating1"
		android:layout_below="@id/imgRating1"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="4 Rating"
		android:textSize="13dip"
		android:textColor="#666666"
		>
		</TextView>
	   
		</RelativeLayout>
		
		<RelativeLayout
		android:id="@+id/rlReview1Info"
		android:layout_toRightOf="@id/rlReview1Img"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip">
		
		<TextView
		android:id="@+id/tvText1"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="This restaurant has a very unique feel to it. Since Anthony Bourdain said Fergus Henderson's bone marrow and parsley salad was the last thing he would eat..." 
		android:gravity="top|center_vertical"
		android:textSize="13dip"
		android:textColor="#666666">
		</TextView>
		
		<Button
		android:id="@+id/btnReviewMobileWeb1"
		android:layout_below="@id/tvText1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:background="@drawable/mobileweb">
		</Button>
		
		</RelativeLayout>
		
	
	</RelativeLayout>
	
	
	<RelativeLayout
	android:id="@+id/rlReview2"
	android:paddingTop="5dip"
	android:paddingLeft="7dip"
	android:paddingRight="7dip"
	android:layout_below="@id/rlReview1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
		<RelativeLayout
		android:id="@+id/rlReview2Img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		
	   <ImageView
	   android:id="@+id/imgReview2"
	   android:layout_height="70dip"
	   android:layout_width="70dip" 
	   android:layout_alignParentLeft="true"
	   android:background="@drawable/panpacific">
	   </ImageView>
	   
	   <TextView
		android:id="@+id/tvUserName2"
		android:layout_below="@id/imgReview2"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="user_name"
		android:textSize="13dip"
		android:textColor="#666666"
		>
		</TextView>
	   
	    <ImageView
	   android:id="@+id/imgRating2"
	   android:layout_below="@id/tvUserName2"
	   android:layout_height="wrap_content"
	   android:layout_width="wrap_content" 
	   android:layout_alignParentLeft="true"
	   android:background="@drawable/rating">
	   </ImageView>
	   
	   <TextView
		android:id="@+id/tvRating2"
		android:layout_below="@id/imgRating2"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="4 Rating"
		android:textColor="#666666"
		>
		</TextView>
	   
		</RelativeLayout>
		
		<RelativeLayout
		android:id="@+id/rlReview2Info"
		android:layout_toRightOf="@id/rlReview2Img"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="10dip">
		
		<TextView
		android:id="@+id/tvText2"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="This restaurant has a very unique feel to it. Since Anthony Bourdain said Fergus Henderson's bone marrow and parsley salad was the last thing he would eat..." 
		android:gravity="top|center_vertical"
		android:textSize="13dip"
		android:textColor="#666666">
		</TextView>
		
		<Button
		android:id="@+id/btnReviewMobileWeb2"
		android:layout_below="@id/tvText2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:background="@drawable/mobileweb">
		</Button>
		
		</RelativeLayout>
		
	
	</RelativeLayout>
	
	<RelativeLayout
	android:id="@+id/rlReview3"
	android:paddingTop="5dip"
	android:paddingLeft="7dip"
	android:paddingRight="7dip"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_below="@id/rlReview2">
	
		<RelativeLayout
		android:id="@+id/rlReview3Img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		
	   <ImageView
	   android:id="@+id/imgReview3"
	   android:layout_height="70dip"
	   android:layout_width="70dip" 
	   android:layout_alignParentLeft="true"
	   android:background="@drawable/panpacific">
	   </ImageView>
	   
	   <TextView
		android:id="@+id/tvUserName3"
		android:layout_below="@id/imgReview3"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="user_name"
		android:textColor="#666666"
		android:textSize="13dip"
		>
		</TextView>
	   
	    <ImageView
	   android:id="@+id/imgRating3"
	   android:layout_below="@id/tvUserName3"
	   android:layout_height="wrap_content"
	   android:layout_width="wrap_content" 
	   android:layout_alignParentLeft="true"
	   android:background="@drawable/rating">
	   </ImageView>
	   
	   <TextView
		android:id="@+id/tvRating3"
		android:layout_below="@id/imgRating3"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="4 Rating"
		android:textColor="#666666"
		android:textSize="13dip"
		>
		</TextView>
	   
		</RelativeLayout>
		
		<RelativeLayout
		android:id="@+id/rlReview3Info"
		android:layout_toRightOf="@id/rlReview3Img"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingLeft="10dip">
		
		<TextView
		android:id="@+id/tvText3"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="This restaurant has a very unique feel to it. Since Anthony Bourdain said Fergus Henderson's bone marrow and parsley salad was the last thing he would eat..." 
		android:gravity="top|center_vertical"
		android:textSize="13dip"
		android:textColor="#666666">
		</TextView>
		
		<Button
		android:id="@+id/btnReviewMobileWeb3"
		android:layout_below="@id/tvText3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:background="@drawable/mobileweb">
		</Button>
		
		</RelativeLayout>
		
	
	</RelativeLayout>
	
	
	</RelativeLayout>
	
	
	
	</LinearLayout>
	</ScrollView>
	</RelativeLayout>
	<RelativeLayout 
		android:id="@+id/rlScrollBar"
		android:layout_alignParentBottom="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:background="@drawable/scrollbar"
	
		>

		<HorizontalScrollView 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_gravity="center">
			
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:orientation="horizontal">

				<ImageView 
					android:layout_height="wrap_content"
					android:layout_width="wrap_content" 
					android:id="@+id/ivHome"
					android:layout_alignParentLeft="true" 
					android:padding="5dip"
					android:src="@drawable/realestate">
				</ImageView>
				
				<ImageView 
				android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivSearch"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/search">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivRestaurant"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/restaurant">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivShopping"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/shopping">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivNightLife"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/nightlife">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivHotelnTravel"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/hotelstravel">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivHealth"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/health">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivEducation"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/education">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivEvent"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/event">
				</ImageView>
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivReligious"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/religious">
				</ImageView>
				
				
				<ImageView android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/ivAutoMotive"
					android:layout_alignParentLeft="true" android:padding="5dip"
					android:src="@drawable/automotive">
				</ImageView>

		


			</LinearLayout>
		</HorizontalScrollView>

	</RelativeLayout>
</RelativeLayout>